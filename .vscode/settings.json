{
  // ============================================================
  // EDITOR & FORMATTING SETTINGS
  // ============================================================
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.sortImports": "never"
  },
  "editor.tabSize": 2,
  "editor.detectIndentation": true,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,

  // ============================================================
  // AUTO-SAVE CONFIGURATION
  // ============================================================
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // ============================================================
  // LANGUAGE-SPECIFIC OVERRIDES
  // ============================================================
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.addMissingImports": "explicit"
    }
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit",
      "source.organizeImports": "explicit",
      "source.addMissingImports": "explicit"
    }
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    }
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.markdownlint": "explicit"
    }
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // ============================================================
  // PYTHON SETTINGS
  // ============================================================
  "python.defaultInterpreterPath": "${workspaceFolder}/agent/.venv/bin/python",
  "python.terminal.activateEnvironment": true,
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.formatting.provider": "black",
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.autoImportCompletions": true,

  // ============================================================
  // ESLINT SETTINGS
  // ============================================================
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.format.enable": true,
  "eslint.codeActionsOnSave.mode": "all",

  // ============================================================
  // PRETTIER SETTINGS
  // ============================================================
  "prettier.requireConfig": false,
  "prettier.useEditorConfig": true,

  // ============================================================
  // TAILWIND CSS SETTINGS
  // ============================================================
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },

  // ============================================================
  // TYPESCRIPT SETTINGS
  // ============================================================
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",

  // ============================================================
  // GITHUB COPILOT TERMINAL AUTO-APPROVE
  // ============================================================
  "chat.tools.terminal.autoApprove": {
    "git": true,
    "git status": true,
    "git add": true,
    "git commit": true,
    "git pull": true,
    "git push": true,
    "git fetch": true,
    "git checkout": true,
    "git branch": true,
    "git merge": true,
    "git rebase": true,
    "npm": true,
    "npm install": true,
    "npm ci": true,
    "npm run": true,
    "npm run dev": true,
    "npm run dev:ui": true,
    "npm run dev:agent": true,
    "npm run build": true,
    "npm run lint": true,
    "npm run format": true,
    "npm test": true,
    "pnpm": true,
    "pnpm install": true,
    "yarn": true,
    "yarn install": true,
    "npx": true,
    "node": true,
    "nvm": true,
    "uv sync": true,
    "uv run": true,
    "pip install": true,
    "source .venv/bin/activate": true,
    ".venv\\Scripts\\activate.bat": true,
    "docker": true,
    "docker-compose": true,
    "mkdir": true,
    "ls": true,
    "pwd": true,
    "cp": true,
    "mv": true,
    "go run": true,
    "go build": true,
    "go test": true
  },

  // ============================================================
  // YAML SCHEMAS
  // ============================================================
  "yaml.schemas": {
    "file:///c%3A/Users/dylan/.vscode/extensions/continue.continue-1.2.11-win32-x64/config-yaml-schema.json": [
      ".continue/**/*.yaml"
    ],
    "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json": [
      "file:///c%3A/Users/dylan/modme-ui-01/genai-toolbox/tools.yaml"
    ]
  },

  // ============================================================
  // FILE ASSOCIATIONS
  // ============================================================
  "files.associations": {
    "*.css": "tailwindcss",
    ".env*": "dotenv",
    "*.yaml": "yaml",
    "*.yml": "yaml"
  },

  // ============================================================
  // SEARCH & EXCLUDE PATTERNS
  // ============================================================
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.venv": true,
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/out": true,
    "**/.cache": true,
    "**/coverage": true
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true
  },

  // ============================================================
  // ERROR LENS SETTINGS (for better visibility)
  // ============================================================
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.followCursor": "activeLine",

  // ============================================================
  // PATH INTELLISENSE SETTINGS
  // ============================================================
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src",
    "~": "${workspaceFolder}"
  },

  // ============================================================
  // SPELL CHECKER SETTINGS
  // ============================================================
  "cSpell.words": [
    "copilotkit",
    "genui",
    "modme",
    "workbench",
    "greptime",
    "chromadb",
    "toolsets",
    "toolset",
    "pyproject",
    "uvicorn",
    "fastapi",
    "pydantic",
    "pylance"
  ],

  // ============================================================
  // TERMINAL SETTINGS
  // ============================================================
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}\\agent"
  },
  "cmake.sourceDirectory": "C:/Users/dylan/.claude-worktrees/modme-ui-01/relaxed-hugle/node_modules/bare-fs"
}
